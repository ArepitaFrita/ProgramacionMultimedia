<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/champ_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/aatrox" />

        <TextView
            android:id="@+id/champ_name"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_constraintBottom_toBottomOf="@+id/champ_image"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Aatrox" />

        <TextView
            android:id="@+id/champ_dmg"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toBottomOf="@+id/champ_image"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Type of damage: Physical" />

        <TextView
            android:id="@+id/champ_role"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toBottomOf="@+id/champ_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/champion_role"
            tools:text="Role: Fighter" />

        <TextView
            android:id="@+id/champ_release"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toBottomOf="@+id/champ_dmg"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/champion_release"
            tools:text="Release Date: 2013-10-08" />

        <TextView
            android:id="@+id/champ_description"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toBottomOf="@+id/champ_release"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Aatrox is a melee fighter who wields a massive sword and shield. He is a powerful duelist who can quickly close the distance between himself and his target. Aatrox is a champion who can be played in a variety of ways, but he is most effective when he is able to use his passive ability to heal himself and his abilities to deal damage to his enemies." />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>